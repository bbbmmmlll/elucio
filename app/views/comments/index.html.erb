<h1>Listing comments</h1>

<table>
  <tr>
    <th>Owner</th>
    <th>Task owner</th>
    <th>Commenter</th>
    <th>Status</th>
    <th>Body</th>
    <th>Public flag</th>
    <th>Group flag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.owner %></td>
    <td><%= comment.task_owner %></td>
    <td><%= comment.commenter %></td>
    <td><%= comment.status %></td>
    <td><%= comment.body %></td>
    <td><%= comment.public_flag %></td>
    <td><%= comment.group_flag %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

