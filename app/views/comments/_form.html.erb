<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :owner %><br />
    <%= f.collection_select :owner, @users, :id, :email, :prompt => "Select" %>
  </div>
  <div class="field">
    <%= f.label :task_owner %><br />
    <%= f.collection_select :task_owner, @users, :id, :email, :prompt => "Select" %>
  </div>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :public_flag %><br />
    <%= f.check_box :public_flag %>
  </div>
  <div class="field">
    <%= f.label :group_flag %><br />
    <%= f.check_box :group_flag %>
  </div>
  <div class="field">
    <%= f.label :task_id %><br />
    <%= f.collection_select :task_id, @tasks, :id, :name, :prompt => "Select" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
